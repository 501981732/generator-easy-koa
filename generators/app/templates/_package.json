{
  "name": "<%= projectName%>",
  "version": "1.0.0",
  "description": "koa-mongo-server",
  "scripts": {
    "dev": "cross-env NODE_ENV=development supervisor index.js",
    "jsdoc": "jsdoc ./src/controllers/**/*.js  -d ./docs/jsdocs",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --compilers js:babel-register --require babel-polyfill",
    "rmpkg": "sudo rm -rf ./node_modules"
  },
  "keywords": [
    "Koa",
    "Node"
  ],
  "author": {
    "name": "<%= author%>",
    "email": "<%= email%>"
  },
  "license": "ISC",
  "dependencies": {
    <% if(db==="mongodb"){ %>
    "mongodb": "^3.1.3",
    "mongoose": "^5.2.8",
    <% }%>
    <% if(db==="mysql"){ %>
    "mysql": "^2.16.0",
    <% }%>
    "co": "^4.6.0",
    "fs.promised": "^3.0.0",
    "glob": "^7.1.2",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.1",
    "koa-swig": "^2.2.1",
    "mini-logger": "^1.1.3"
  },
  "devDependencies": {
    <% if (test ) {%>
    "mocha": "^5.2.0",
    "should": "^13.2.3",
    "supertest": "^3.3.0",
    <% }%>
    "jsdoc": "^3.5.5",
    "chalk": "^2.4.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "cross-env": "^5.2.0",
    "gulp": "^3.9.1"
  }
}
